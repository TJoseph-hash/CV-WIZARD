{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|css|js|woff|woff2|ttf|svg|html)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5000
    },
    "hosting": {
      "port": 5001
    },
    "ui": {
      "enabled": true,
      "port": 2000
    },
    "singleProjectMode": true
  }
}
